{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@spearlab/cli/*": ["../cli/spearlab-cli/src/*"],
			"@spearlab/cli": ["../cli/src/main/index.ts"],
			"@spearlab/sdk/*": ["../sdk/core/src/*"],
			"@spearlab/sdk": ["../sdk/core/src/index.ts"],
			"@spearlab/design-system/*": ["../design-system/src/*"],
			"@spearlab/design-system": ["../design-system/src/index.ts"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["../*/src"]
}
